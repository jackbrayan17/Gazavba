{
  "cli": {
    "version": ">= 16.23.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "android": {
        "buildType": "apk"
      },
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true
    },
    "apk": {
      "extends": "production",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "NODE_OPTIONS": "--max_old_space_size=4096"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
